pipeline{
    agent any
    parameters {
        choice(name: 'VERSION', choices: ['1.1.0', '1.2.0', '1.3.0'], description: '')
        booleanParam(name: 'executeTests', defaultValue: true, description: '')
    }

    stages{
        stage("checkout") {
            steps{
                echo "checkout successful"
            }
        }
        stage("build") {
            steps{
                echo "build stage successful"
            }
        }
        stage("test") {
            when {
                expression {
                    params.executeTests
                }
            }
            steps{
            echo "test succesful"
            }
        }
        stage("deploy") {
            steps{
                echo "deploy success"
            }
        }
    }
}
